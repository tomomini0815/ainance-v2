
{
  "name": "corporation_invoices",
  "options": {
    "validator": {
      "$jsonSchema": {
        "bsonType": "object",
        "required": ["user_id", "invoice_number", "issue_date", "due_date", "customer_info", "total_amount", "status", "approval_status", "created_at"],
        "properties": {
          "user_id": {
            "bsonType": "string",
            "description": "法人ユーザーID"
          },
          "invoice_number": {
            "bsonType": "string",
            "description": "請求書番号"
          },
          "issue_date": {
            "bsonType": "string",
            "title": "datetime",
            "description": "発行日"
          },
          "due_date": {
            "bsonType": "string",
            "title": "datetime",
            "description": "支払期限"
          },
          "customer_info": {
            "bsonType": "object",
            "description": "顧客情報"
          },
          "items": {
            "bsonType": "array",
            "description": "請求項目リスト"
          },
          "subtotal": {
            "bsonType": "number",
            "minimum": 0,
            "description": "小計"
          },
          "tax_amount": {
            "bsonType": "number",
            "minimum": 0,
            "description": "消費税額"
          },
          "total_amount": {
            "bsonType": "number",
            "minimum": 0,
            "description": "合計金額"
          },
          "status": {
            "bsonType": "string",
            "enum": ["draft", "sent", "paid", "overdue"],
            "description": "請求書ステータス"
          },
          "approval_status": {
            "bsonType": "string",
            "enum": ["pending", "approved", "rejected"],
            "description": "承認ステータス（法人用）"
          },
          "approved_by": {
            "bsonType": "string",
            "description": "承認者ID"
          },
          "approved_at": {
            "bsonType": "string",
            "title": "datetime",
            "description": "承認日時"
          },
          "department": {
            "bsonType": "string",
            "description": "部署名"
          },
          "project_code": {
            "bsonType": "string",
            "description": "プロジェクトコード"
          },
          "notes": {
            "bsonType": "string",
            "description": "備考"
          },
          "created_at": {
            "bsonType": "string",
            "title": "datetime",
            "description": "作成日時"
          },
          "updated_at": {
            "bsonType": "string",
            "title": "datetime",
            "description": "更新日時"
          }
        },
        "additionalProperties": true
      }
    },
    "validationLevel": "moderate",
    "validationAction": "warn"
  }
}
